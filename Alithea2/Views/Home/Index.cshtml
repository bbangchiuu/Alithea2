@using Alithea2.Models
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    List<ProductCategory> listProNam = new List<ProductCategory>();
    List<ProductCategory> listProNu = new List<ProductCategory>();
    List<ProductCategory> listGiayNam = new List<ProductCategory>();
    List<ProductCategory> listGiayNu = new List<ProductCategory>();
    List<Category> listCategories = new List<Category>();

    if (ViewBag.listProNam != null)
    {
        listProNam = ViewBag.listProNam as List<ProductCategory>;
    }
    if (ViewBag.listProNu != null)
    {
        listProNu = ViewBag.listProNu as List<ProductCategory>;
    }
    if (ViewBag.listGiayNam != null)
    {
        listGiayNam = ViewBag.listGiayNam as List<ProductCategory>;
    }
    if (ViewBag.listGiayNu != null)
    {
        listGiayNu = ViewBag.listGiayNu as List<ProductCategory>;
    }
    if (ViewBag.listCategories != null)
    {
        listCategories = ViewBag.listCategories as List<Category>;
    }
}

<div class="col-sm-12 img-bgr">
    <header class="to">
        <div id="getting-started" class="wow bounceInLeft" data-wow-delay="1s"></div>
        <img src="~/Content/public/images/s3.png" alt="" class="hoatiet1 wow bounceInUp" data-wow-delay="0.5s">
        <img src="~/Content/public/images/s4.png" alt="" class="hoatiet2 wow bounceInUp" data-wow-delay="0.6s">
        <img src="~/Content/public/images/s4.png" alt="" class="hoatiet3 wow bounceInUp" data-wow-delay="0.7s">
        <img src="~/Content/public/images/s3.png" alt="" class="hoatiet4 wow bounceInUp" data-wow-delay="0.8s">
        <div class="chuto wow bounceInLeft" data-wow-delay="0.9s">Đếm ngược ngày Valentine!</div>
    </header>
</div>
<section class="session1">
    <div class="row">
        @if (TempData["Success"] != null)
        {
            <h2 class="text-center title-block wow bounceIn m-t-100 text-success" data-wow-delay="0.1s" data-wow-offset="50">
                @TempData["Success"]
            </h2>
        }
        <h2 class="text-center title-block wow bounceIn m-t-100" data-wow-delay="0.1s" data-wow-offset="50">
            Quần áo Nam
        </h2>
        <div class="col-lg-12 grid-uniform">
            <div class="row">
                @if (listProNam != null)
                {
                    for (int i = 0; i < listProNam.Count; i++)
                    {
                        <div class="col-sm-3 float-left">
                            <a href="/Home/Details/@listProNam[i].ProductID">
                                <div class=" wow bounceIn" data-wow-delay="1ms">
                                    <div class="grid__item  product-item">
                                        <div class="grid__image">
                                            <img class="anhthem1" src="@listProNam[i].Product.ProductImage">
                                            <img class="anhthem2" src="@listProNam[i].Product.ProductImage">
                                        </div>
                                        <form action="" class="variants AddToCartForm">
                                            <h3 class="h6">
                                                <a href="">
                                                    @listProNam[i].Product.ProductName
                                                </a>
                                            </h3>
                                            <div class="price">
                                                <span class="product-price">
                                                @string.Format("{0:C}", listProNam[i].Product.UnitPrice)
                                                </span>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>
